/* pages/pay/pay.wxss */
.pay-contenter{
  background: #eee;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  font-size: 16px;
}
.pay-content{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 60px;
  left: 0;
  overflow: auto;
  padding: 20px;

}

.pay-top{
  display: flex;
  justify-content: space-between;
}
.pay-top-left view:nth-child(1){
  font-size: 22px;
  font-weight: bold;
}
.pay-top-left view:nth-child(2){
  font-size: 15px;
  color: #333;
}
.pay-top-right{
  font-size: 14px;
  display: flex;
  align-items: center;
}
.pay-top-right text{
  display: inline-block;
  padding: 5px 10px;
  background: #fff;
  margin: 0 3px;
  border-radius: 5px;
}
.pay-top-right .selected{
  color: #fff;
  background: red;
}

.pay-address{
  margin-top: 15px;
  background: #fff;
  border-radius: 8px;
  padding: 10px 15px;
  text-align: center;
}
.pay-address-top{
  text-align: left;
  margin-right: 35px;
}
.pay-address-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #666;
}
.pay-address-bottom image{
  width: 30px;
  height: 25px;
}

.pay-good{
  margin-top: 15px;
  background: #fff;
  border-radius: 8px;
  padding: 10px 15px;
  font-size: 15px;
}
.good-list{
  margin: 5px 0;
}
.good-list-li{
  margin-top: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.good-list-li-left{
  display: flex;
  align-items: center;
}
.good-list-li-left image{
  width: 50px;
  height: 35px;
  margin-right: 5px;
}
.good-list-li-left-name{
  font-size: 15px;
}
.good-list-li-left-standard{
  color: #666;
  font-size: 12px;
}
.good-list-li-right{
  font-size: 14px;
  color: #000;
  width: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.good-list-li-right-num{
  color: #666;
  font-size: 12px;
}

.distribution-fee,.busines{
  color: #666;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.busines{
  border-top: 1px solid #ccc;
}
.busines view:nth-child(1){
  color: blue;
}
.busines .payDataTotal{
  color: #000;
  font-size: 16px;
  font-weight: bold;
}


.coupon,.remarks{
  margin-top: 15px;
  background: #fff;
  border-radius: 8px;
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.coupon-right,.remarks-right{
  width: 70%;
  color: #999;
  font-size: 14px;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pay-bottom{
  font-size: 18px;
  font-weight: bold;
  background: #fff;
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 60px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pay-price{
  padding: 0 20px;
}
.pay{
  color: #fff;
  background: red;
  display: inline-block;
  height: 60px;
  line-height: 60px;
  padding: 0 30px;
}