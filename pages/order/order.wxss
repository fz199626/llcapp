/* pages/order/order.wxss */
.order{
  background: #efefef;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 20px 20px 0;
  overflow: auto;
}
.order-single{
  background: #fff;
  border-radius: 8px;
  padding: 15px 0;
  font-size: 15px;
  margin-bottom: 20px;
  position: relative;
}
.order-cont{
  margin: 0 15px;
}
.selfTaking,.takeOut{
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  font-size: 14px;
}
.selfTaking{
  background: #efefef;
  padding: 8px 15px;
}
.status{
  font-size: 12px;
  color: #fff;
  background: #ccc;
  padding: 2px 10px;
  border-radius: 15px;
}

.good-list{
  margin: 10px 0;
}
.good-list-li{
  margin-top: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.good-list-li-left{
  display: flex;
  align-items: center;
}
.good-list-li-left image{
  width: 60px;
  height: 40px;
  margin-right: 5px;
}
.good-list-li-left-name{
  font-size: 15px;
}
.good-list-li-left-standard{
  color: #666;
  font-size: 12px;
}
.good-list-li-right{
  font-size: 14px;
  color: #000;
  width: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.good-list-li-right-num{
  color: #666;
  font-size: 12px;
}

.distribution-fee,.busines{
  color: #666;
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.busines{
  border-top: 1px solid #ccc;
}
.busines view:nth-child(1){
  color: #999;
  font-size: 13px;
}
.busines-right{
  color: #000;
  font-size: 17px;
  font-weight: bold;
  width: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.busines-right-num{
  font-weight: normal;
  color: #666;
  font-size: 12px;
}
.noOrder{
  text-align: center;
  margin-top: 150px;
  color: #999;
  font-size: 16px;
}